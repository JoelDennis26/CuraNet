files:
  "/tmp/remove_invalid_config.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      # Remove invalid gunicorn config if it exists
      find /opt/elasticbeanstalk -name "*.config" -exec grep -l "MaxRequestSize" {} \; | xargs rm -f

container_commands:
  01_remove_invalid:
    command: "/tmp/remove_invalid_config.sh"