{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowCuraNetAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::YOUR_ACCOUNT_ID:user/curanet-s3-user"
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::curanet-medical-reports",
                "arn:aws:s3:::curanet-medical-reports/*"
            ]
        }
    ]
}